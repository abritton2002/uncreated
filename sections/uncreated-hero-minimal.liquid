{{ 'uncreated-minimal.css' | asset_url | stylesheet_tag }}

{% style %}
  #uncreated-hero-{{ section.id }} {
    min-height: {{ section.settings.hero_height }}vh;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  #uncreated-hero-{{ section.id }} .hero__title {
    font-size: {{ section.settings.title_size }}px;
    letter-spacing: {{ section.settings.title_spacing }}em;
  }

  @media screen and (max-width: 749px) {
    #uncreated-hero-{{ section.id }} .hero__title {
      font-size: calc({{ section.settings.title_size }}px * 0.5);
    }
  }
{% endstyle %}

<section
  id="uncreated-hero-{{ section.id }}"
  class="uncreated-hero"
  data-section-id="{{ section.id }}"
  data-section-type="uncreated-hero"
>
  <div class="hero__content">
    {%- if section.settings.show_background_image and section.settings.background_image != blank -%}
      <div class="hero__background">
        {{
          section.settings.background_image
          | image_url: width: 2000
          | image_tag: loading: 'eager', class: 'hero__bg-image'
        }}
      </div>
    {%- endif -%}

    <div class="hero__gallery-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'image' -%}
          <div class="hero__gallery-item" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag: loading: 'eager', class: 'hero__gallery-image', alt: block.settings.image.alt | escape
              }}
            {%- else -%}
              <div class="hero__gallery-placeholder">
                <span>IMAGE</span>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_overlay_text -%}
      <div class="hero__overlay-text">
        {%- if section.settings.subtitle != blank -%}
          <p class="hero__overlay-subtitle">
            {{ section.settings.subtitle }}
          </p>
        {%- endif -%}

        {%- if section.settings.show_cta -%}
          <button
            class="hero__overlay-cta"
            onclick="document.querySelector('#uncreated-product-section').scrollIntoView({ behavior: 'smooth' })"
          >
            {{ section.settings.cta_text }}
          </button>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_scroll_indicator -%}
      <div class="hero__scroll-indicator">
        <div class="scroll-line"></div>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Uncreated Hero",
  "class": "section-uncreated-hero",
  "max_blocks": 9,
  "settings": [
    {
      "type": "range",
      "id": "hero_height",
      "min": 80,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Hero Height",
      "default": 100
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#0a0a0a"
    },
    {
      "type": "checkbox",
      "id": "show_overlay_text",
      "label": "Show Overlay Text",
      "default": true,
      "info": "Shows text centered over images"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Overlay Text",
      "default": "Created by the Uncreated One"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "ENTER DROP"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Uncreated Hero",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
